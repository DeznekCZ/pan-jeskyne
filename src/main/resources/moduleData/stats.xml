<?xml version="1.0" encoding="UTF-8"?>
<stats>
  <statistic id="statistic.sil" name="síla" groups="main;body"
    desc="Vyjadřuje sílu hrdiny" />
  <statistic id="statistic.obr" name="obratnost" groups="main;body"
    desc="Vyjadřuje obratnost hrdiny" />
  <statistic id="statistic.zrc" name="zručnost" groups="main;body"
    desc="Vyjadřuje zručnost hrdiny" />
  <statistic id="statistic.vol" name="vůle" groups="main;psychic"
    desc="Vyjadřuje vůli hrdiny" />
  <statistic id="statistic.int" name="inteligence" groups="main;psychic"
    desc="Vyjadřuje inteligenci hrdiny" />
  <statistic id="statistic.chr" name="charisma" groups="main;psychic"
    desc="Vyjadřuje charismu hrdiny" />
  <statistic id="statistic.odl" name="odolnost"
    desc="Vyjadřuje odolnost hrdiny vůči okolním vlivům (př. počasí)">
    statistic.sil
  </statistic>
  <statistic id="statistic.kon" name="zdraví"
    desc="Zdraví vyjadřuje hrdinovu schonost vydržet vyšší silové či magické vypětí (po přepočtu zranění).">
    6 + statistic.odl
  </statistic>
  <statistic id="statistic.moc" name="moc"
    desc="Vyjadřuje moc hrdiny\nPoužívá se pro určení síly kouzla.">
    statistic.vol
  </statistic>
  <statistic id="statistic.sms" name="smysly"
    desc="Smysly vyjadřují shopnost vnímat okolí (všeobecně)">
    statistic.zrc
  </statistic>
  <statistic id="statistic.sms.zrak" name="zrak" groups="senses">
    statistic.sms
  </statistic>
  <statistic id="statistic.sms.cich" name="čich" groups="senses">
    statistic.sms
  </statistic>
  <statistic id="statistic.sms.chut" name="chuť" groups="senses">
    statistic.sms
  </statistic>
  <statistic id="statistic.sms.hmat" name="hmat" groups="senses">
    statistic.sms
  </statistic>
  <statistic id="statistic.sms.sluch" name="sluch" groups="senses">
    statistic.sms
  </statistic>
  <statistic id="statistic.krs" name="krása" desc="">
    function.roundup((statistic.zrc + statistic.obr) / 2) +
    function.roundup(statistic.chr / 2)
  </statistic>
  <statistic id="statistic.dst" name="důstojnost" desc="">
    function.roundup((statistic.int + statistic.vol) / 2) +
    function.roundup(statistic.chr / 2)
  </statistic>
  <statistic id="statistic.neb" name="nebezpečnost" desc="">
    function.roundup((statistic.sil + statistic.vol) / 2) +
    function.roundup(statistic.chr / 2)
  </statistic>
  <statistic id="statistic.magic" name="kouzlení" desc="">
    function.roundup((statistic.obr + statistic.int) / 2)
  </statistic>
  <statistic id="statistic.f2f" name="útok z blízka" desc="">
    function.roundup(statistic.obr / 2)
  </statistic>
  <statistic id="statistic.ranged" name="střelba" desc="">
    function.roundup(statistic.zrc / 2)
  </statistic>
  <statistic id="statistic.def" name="obrana" desc="">
    5 + function.roundup(statistic.obr)
  </statistic>
  <statistic id="character.experience" name="zkušenosti" desc="" />
  <statistic id="character.level" name="úroveň" desc="">
    table.exp_to_level(character.experience)
  </statistic>
  <statistic id="skills.known" />
  <statistic id="skills.learnable">
    character.level * 3 - skills.known
  </statistic>
  <statistic id="zazemi.puvod" />
  <statistic id="zazemi.skills" />
  <statistic id="zazemi.majetek" />
</stats>
